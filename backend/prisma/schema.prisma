generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gift {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type           GiftType
  title          String?
  description    String?
  date           DateTime? @db.Date
  picture        String?
  details        Json?
  customType     String?
  shareLink      String?   @unique
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  contributions  Contribution[]
  guests         Guest[]
  guestListMode  GuestListMode @default(restricted)

  @@index([userId])
  @@index([createdAt])
}

model User {
  id                        Int       @id @default(autoincrement())
  name                      String
  email                     String    @unique
  password                  String
  isVerified                Boolean   @default(false)
  verificationToken         String?
  verificationTokenExpires  DateTime?
  resetPasswordToken        String?
  resetPasswordExpires      DateTime?
  wallet                    Decimal   @default(0) @db.Decimal(10, 2)
  profilePicture            String?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  gifts                     Gift[]
  contributions             Contribution[]
  guests                    Guest[]
  withdrawals               Withdrawal[]

  @@index([email])
}

model Contribution {
  id               Int     @id @default(autoincrement())
  userId           Int?
  user             User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  giftId           Int
  gift             Gift    @relation(fields: [giftId], references: [id], onDelete: Cascade)
  contributorName  String?
  contributorEmail String?
  amount           Decimal @db.Decimal(10, 2)
  message          String?
  transactionId    String? @unique
  status           String  @default("completed")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([giftId])
}

model Guest {
  id           Int         @id @default(autoincrement())
  userId       Int
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  giftId       Int?
  gift         Gift?       @relation(fields: [giftId], references: [id], onDelete: Cascade)
  firstName    String
  lastName     String
  email        String?
  phone        String?
  allowed      Int         @default(1)
  attending    String      @default("yes")
  status       GuestStatus @default(invited)
  tableSitting String      @default("Table sitting")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([userId])
  @@index([giftId])
  @@index([giftId, firstName, lastName])
}

model Withdrawal {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  amount         Decimal  @db.Decimal(10, 2)
  bankCode       String
  bankName       String?
  accountNumber  String
  accountName    String?
  reference      String?  @unique
  status         String   @default("pending")
  transferId     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
}

enum GiftType {
  wedding
  birthday
  graduation
  convocation
  other
}

enum GuestStatus {
  invited
  confirmed
  declined
}

enum GuestListMode {
  open
  restricted
}