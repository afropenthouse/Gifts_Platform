generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Gift {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type           GiftType
  title          String?
  description    String?
  date           DateTime?
  deadline       DateTime?
  address        String?
  picture        String?
  details        Json?
  customType     String?
  shareLink      String?   @unique
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  contributions  Contribution[]
  guests         Guest[]
  vendors        Vendor[]
  moments        Moment[]
  guestListMode  GuestListMode @default(restricted)
  isSellingAsoebi Boolean   @default(false)
  asoebiPrice    Decimal?  @db.Decimal(10, 2)
  asoebiPriceMen Decimal?  @db.Decimal(10, 2)
  asoebiPriceWomen Decimal? @db.Decimal(10, 2)
  asoebiBrideMenPrice Decimal? @db.Decimal(10, 2)
  asoebiBrideWomenPrice Decimal? @db.Decimal(10, 2)
  asoebiGroomMenPrice Decimal? @db.Decimal(10, 2)
  asoebiGroomWomenPrice Decimal? @db.Decimal(10, 2)
  asoebiBrideDescription String?
  asoebiGroomDescription String?
  asoebiBrideMenDescription String?
  asoebiBrideWomenDescription String?
  asoebiGroomMenDescription String?
  asoebiGroomWomenDescription String?

  @@index([userId])
  @@index([createdAt])
}

model User {
  id                        Int       @id @default(autoincrement())
  name                      String
  email                     String    @unique
  password                  String
  isVerified                Boolean   @default(false)
  verificationToken         String?
  verificationTokenExpires  DateTime?
  resetPasswordToken        String?
  resetPasswordExpires      DateTime?
  wallet                    Decimal   @default(0) @db.Decimal(10, 2)
  profilePicture            String?
  createdAt                 DateTime  @default(now())
  updatedAt                 DateTime  @updatedAt
  gifts                     Gift[]
  contributions             Contribution[]
  guests                    Guest[]
  withdrawals               Withdrawal[]
  moments                   Moment[]

  @@index([email])
}

model Contribution {
  id               Int     @id @default(autoincrement())
  userId           Int?
  user             User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  giftId           Int
  gift             Gift    @relation(fields: [giftId], references: [id], onDelete: Cascade)
  contributorName  String?
  contributorEmail String?
  amount           Float
  message          String?
  transactionId    String? @unique
  status           String  @default("completed")
  commission       Float   @default(0)
  isAsoebi         Boolean @default(false)
  asoebiQuantity   Int     @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([giftId])
}

model Guest {
  id           Int         @id @default(autoincrement())
  userId       Int
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  giftId       Int?
  gift         Gift?       @relation(fields: [giftId], references: [id], onDelete: Cascade)
  firstName    String
  lastName     String
  email        String?
  phone        String?
  allowed      Int         @default(1)
  attending    String      @default("yes")
  status       GuestStatus @default(invited)
  tableSitting String      @default("Table sitting")
  asoebi       Boolean     @default(false)
  asoebiPaid   Boolean     @default(false)
  asoebiSelection String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([userId])
  @@index([giftId])
  @@index([giftId, firstName, lastName])
}

model Withdrawal {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  amount         Decimal  @db.Decimal(10, 2)
  bankCode       String
  bankName       String?
  accountNumber  String
  accountName    String?
  reference      String?  @unique
  status         String   @default("pending")
  transferId     String?
  sourceType     String?  @default("gift") // "gift" or "asoebi"
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([userId])
}

model Vendor {
  id             Int      @id @default(autoincrement())
  eventId        Int
  event          Gift     @relation(fields: [eventId], references: [id], onDelete: Cascade)
  category       String
  vendorEmail    String?
  amountAgreed   Decimal  @db.Decimal(10, 2)
  amountPaid     Decimal  @default(0) @db.Decimal(10, 2)
  scheduledAmount Decimal @default(0) @db.Decimal(10, 2)
  dueDate        DateTime
  releaseDate    DateTime?
  bankCode       String?
  bankName       String?
  accountNumber  String?
  accountName    String?
  status         String   @default("Not Scheduled")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([eventId])
}

model Moment {
  id        Int      @id @default(autoincrement())
  userId    Int?
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  giftId    Int
  gift      Gift     @relation(fields: [giftId], references: [id], onDelete: Cascade)
  imageUrl  String
  event     String   // the gift title
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([giftId])
}

enum GiftType {
  wedding
  birthday
  graduation
  convocation
  other
}

enum GuestStatus {
  invited
  confirmed
  declined
}

enum GuestListMode {
  open
  restricted
}
